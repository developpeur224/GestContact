{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container m-auto p-3 bg-secondary">
		<h1 class="text-center text-white">REGISTER</h1>
		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		<div class="row g-2 mb-3">
			<div class="col-md">
				<div class="form-floating mb-3">
					{{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'autocomplet': 'email'}}) }}
					<label for="inputNom">Nom</label>
				</div>
			</div>
			<div class="col-md">
				<div class="form-floating mb-3">
					{{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'autocomplet': 'email'}}) }}
					<label for="inputPrenom">Prénom</label>
				</div>
			</div>
		</div>
		<div class="row g-2 mb-3">
			<div class="col-md">
				<div class="form-floating mb-3">
					{{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control', 'autocomplet': 'email'}}) }}
					<label for="inputTelephone">Téléphone</label>
				</div>
			</div>
			<div class="col-md">
				<div class="form-floating mb-3">
					{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'autocomplet': 'email'}}) }}
					<label for="inputEmail">Email</label>
				</div>
			</div>
		</div>
		<div class="row g-2 mb-3">
			<div class="col-md">
				<div class="form-floating mb-3">
					{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'autocomplet': 'email'}}) }}
					<label for="inputEmail">Mot de Pass</label>
				</div>
			</div>
			<div class="col-md">
				<div class="form-floating mb-3">
					{{ form_widget(registrationForm.confirmPassword, {'attr': {'class': 'form-control', 'autocomplet': 'email'}}) }}
					<label for="inputEmail">Confirm Password</label>
				</div>
			</div>
		</div>
		{{ form_widget(registrationForm.agreeTerms, {'attr': {'checked': 'checked', 'hidden': 'hidden'}}) }}
		<div class="d-flex justify-content-center">
			{{ form_widget(registrationForm.save) }}
		</div>
		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
